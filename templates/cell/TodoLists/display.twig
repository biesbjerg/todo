<ul class="nav nav-pills flex-column">
{% for todoList in todoLists %}
    <li class="nav-item">
        {% set itemCountBadge %}
            <span class="badge badge-pill float-right m-1" style="background-color: {{ todoList.color }}">
                {{ todoList.incomplete_item_count }}
            </span>
        {% endset %}
        {{
            helper_Html_link(todoList.title|e ~ itemCountBadge, {
                '_name': 'view_todo_list',
                'list_id': todoList.id,
                'slug': todoList.slug
            }, {
                'escape': false,
                'class': [
                    'nav-link',
                    todoList.id == activeListId ? 'active'
                ]
            })
        }}
    </li>
{% endfor %}
</ul>
